<!DOCTYPE html>
<html lang="en">
<%- include('includes/head') %>
<body>
    
    <div class="page-container">
    <div class="bg-gradient"></div>
    
    <nav class="navbar">
        <div class="navbar-content">

            <h1 class="title-main" style="margin-top: 15px;">CREATE</h1>

            <div class="nav-buttons">
            <% if (user) { %>
            
           <a class="btn btn-secondary" href="/dashboard">
             ‚Üê BACK
           </a>

                <% } else { %>
                <a class="btn btn-secondary" href="/login">
                  LOG IN
                </a>
                <% } %>
            </div>
        </div>
        </nav>

    <main class="main-content">
        <h2 class="page-title">CREATE NEW POST</h2>
        <form class="form-container max-width-56rem" action="/create-post" method="POST">
        <% if (typeof errors !== 'undefined' && errors && errors.length) { %>
          <% errors.forEach(error => { %>
            <p class="notice"><%= error %></p>
          <% }) %>
        <% } %>
        
            <div class="form-group">
            <label class="form-label label-large" for="title" style="font-size: 1.5rem;">Title</label>
              <input type="text" class="form-input input-large" style="font-family: 'Arial', sans-serif; font-size: 1.2rem;" placeholder="Enter your post title" required type="text" id="title" name="title" autocomplete="off" value="">
            </div>

            <div class="form-group">
            <label class="form-label label-large" for="body" style="font-size: 1.5rem;">Content</label>
              <textarea class="form-input input-large" style="font-family: 'Arial', sans-serif; font-size: 1.2rem;" rows="5" placeholder="Write content" required name="body" id="body"></textarea>
            </div>

            
        <br/>
        <div class="form-group">
              <div id="uploadPrompt">
                <label class="form-label label-large" style="font-size: 1.5rem;">Image</label>
              <!-- Clicking this label opens the file picker without JavaScript -->
              <label class="upload-area" id="uploadArea" for="fileInput">
                <svg class="upload-icon" xmlns="http://www.w3.org/2000/svg" width="24" height="24" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2" stroke-linecap="round" stroke-linejoin="round">
                  <path d="M21 15v4a2 2 0 0 1-2 2H5a2 2 0 0 1-2-2v-4"/><polyline points="17 8 12 3 7 8"/><line x1="12" x2="12" y1="3" y2="15"/>
                </svg>
                <p class="upload-text">Click to upload an image</p>
                <p class="upload-subtext">PNG, JPG up to 10MB</p>
              </label>
              </div>
            <input type="file" id="fileInput" name="image" accept="image/*" class="file-input">
            <p id="uploadError" class="upload-error">
              <% if (typeof fieldErrors !== 'undefined' && fieldErrors && fieldErrors.image && fieldErrors.image.length) { %>
                <% fieldErrors.image.forEach(function(err){ %>
                  <%= err %>
                <% }) %>
              <% } else if (typeof errors !== 'undefined' && errors && errors.length) { %>
                <% errors.forEach(function(err){ if (err && err.toLowerCase().includes('image')) { %>
                  <%= err %>
                <% } }) %>
              <% } %>
            </p>
          </div>

        <button class="btn-submit btn-submit--big">
          <svg xmlns="http://www.w3.org/2000/svg" width="24" height="24" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2" stroke-linecap="round" stroke-linejoin="round">
            <path d="M15.2 3a2 2 0 0 1 1.4.6l3.8 3.8a2 2 0 0 1 .6 1.4V19a2 2 0 0 1-2 2H5a2 2 0 0 1-2-2V5a2 2 0 0 1 2-2z"/><path d="M17 21v-7a1 1 0 0 0-1-1H8a1 1 0 0 0-1 1v7"/><path d="M7 3v4a1 1 0 0 0 1 1h7"/>
          </svg>
          <span>SAVE & PUBLISH</span>
        </button>
      </form>
    </main>
  </div>

  <%- include('includes/footer') %>
</body>
  <script src="/js/create-post.js" defer></script>
</html>
